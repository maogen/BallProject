        <activity android:name="com.zgmao.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zgmao.activity.HistoryActivity">

        </activity>
        <activity android:name="com.zgmao.activity.NumberWinActivity">

        </activity>
    </application>

</manifest>